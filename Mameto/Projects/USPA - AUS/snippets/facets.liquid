{% comment %}
  Renders facets (filtering and sorting)

  Accepts:
  - results: {Object} Collection or Search object
  - enable_filtering: {Boolean} Show filtering when true
  - enable_sorting: {Boolean} Show sorting when true
  - filter_type: {String} Type of filter
  - paginate: {Object}

  Usage:
  {% render 'facets', results: collection, enable_filtering: true, enable_sorting: true, filter_type: 'vertical', paginate: paginate %}
{% endcomment %}

{{ 'component-show-more.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign sort_by = results.sort_by | default: results.default_sort_by
  assign total_active_values = 0
  if results.url
    assign results_url = results.url
  else
    assign terms = results.terms | escape
    assign results_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
  endif
-%}

<div class="facets-container{% if filter_type == 'drawer' %} facets-container-drawer{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  {%- if filter_type == 'vertical' or filter_type == 'horizontal' -%}
    <facet-filters-form class="facets small-hide">
      <form
        id="FacetFiltersForm"
        class="{% if filter_type == 'horizontal' %}facets__form-desktop{% else %}facets__form-vertical{% endif %}"
      >
        {%- if results.terms -%}
          <input type="hidden" name="q" value="{{ results.terms | escape }}">
          <input name="options[prefix]" type="hidden" value="last">
        {%- endif -%}

        <div class="filter-top__desktop-container">
          {% if enable_filtering %}
            {% comment %} Heading is the first tabbable element on filter type horizontal {% endcomment %}
            <div
              id="FacetsWrapperDesktop"
              {% if filter_type == 'horizontal' %}
                class="facets__wrapper-desktop"
              {% endif %}
            >
              <div class="filter-sort__contaner-desktop">
                {%- if filter_type == 'horizontal' and results.filters != empty -%}
                  <h3 class="facets__heading caption-large text-body" id="verticalTitle" tabindex="-1">
                    {% render 'filter-svg' %}Filter
                  </h3>
                {%- endif -%}
                {%- if filter_type == 'horizontal' -%}
                  {% comment %} Sorting and product count are the last elements when filter type is horizontal {% endcomment %}
                  {%- if enable_sorting -%}
                    <div class="facet-filters sorting caption">
                      <div class="facet-filters__field">
                        <h2 class="facet-filters__label caption-large text-body">
                          <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
                        </h2>
                        <div class="select">
                          {%- assign sort_by = results.sort_by | default: results.default_sort_by -%}
                          <select
                            name="sort_by"
                            class="facet-filters__sort select__select caption-large"
                            id="SortBy"
                            aria-describedby="a11y-refresh-page-message"
                          >
                            {%- for option in results.sort_options -%}
                              {% assign option_name = option.name | escape %}
                              {%- unless option_name == 'Date, old to new' or option_name == 'Date, new to old' -%}
                                <option value="{{ option.value | escape }}" {% if option.value == sort_by %} selected="selected" {% endif %}>
                                  {{ option.name | escape }}
                                </option>
                              {%- endunless -%}
                            {%- endfor -%}                            
                          </select>
                          {% render 'icon-caret' %}
                        </div>
                      </div>
      
                      <noscript>
                        <button type="submit" class="facets__button-no-js button button--secondary">
                          {{ 'products.facets.sort_button' | t }}
                        </button>
                      </noscript>
                    </div>
                  {%- endif -%}
                {%- endif -%}
              </div>



              {% comment %} Pills are right below the title for filter type vertical {% endcomment %}
              {%- if filter_type == 'vertical' -%}
                <div class="active-facets active-facets-desktop">
                  <div class="active-facets-vertical-filter">
                    {%- unless results.filters == empty -%}
                      <h2
                        class="facets__heading facets__heading--vertical caption-large text-body"
                        id="verticalTitle"
                        tabindex="-1"
                      >
                        {{ 'products.facets.filter_by_label' | t }}
                      </h2>
                    {%- endunless -%}
                    <facet-remove class="active-facets__button-wrapper">
                      <a href="{{ results_url }}" class="active-facets__button-remove underlined-link">
                        <span>{{ 'products.facets.clear_all' | t }}</span>
                      </a>
                    </facet-remove>
                  </div>
                  {%- for filter in results.filters -%}
                    {%- for value in filter.active_values -%}
                      <facet-remove>
                        <a href="{{ value.url_to_remove }}" class="active-facets__button active-facets__button--light">
                          <span class="active-facets__button-inner button button--tertiary">
                            {{ filter.label }}: {{ value.label | escape }}
                            {% render 'icon-close-small' %}
                            <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                          </span>
                        </a>
                      </facet-remove>
                    {%- endfor -%}
                    {% if filter.type == 'price_range' %}
                      {%- if filter.min_value.value != null or filter.max_value.value != null -%}
                        <facet-remove>
                          <a href="{{ filter.url_to_remove }}" class="active-facets__button active-facets__button--light">
                            <span class="active-facets__button-inner button button--tertiary">
                              {%- if filter.min_value.value -%}
                                {{ filter.min_value.value | money }}
                              {%- else -%}
                                {{ 0 | money }}
                              {%- endif -%}
                              -
                              {%- if filter.max_value.value -%}
                                {{ filter.max_value.value | money }}
                              {%- else -%}
                                {{ filter.range_max | money }}
                              {%- endif -%}
                              {% render 'icon-close-small' %}
                              <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                            </span>
                          </a>
                        </facet-remove>
                      {%- endif -%}
                    {% endif %}
                  {%- endfor -%}
                </div>
              {%- endif -%}

              <script src="{{ 'show-more.js' | asset_url }}" defer="defer"></script>
              <div class="filter-collection__container page-width">
                {% comment %} Filters for both horizontal and vertical filter {% endcomment %}
                {%- for filter in results.filters -%}
                  {%- assign total_active_values = total_active_values | plus: filter.active_values.size -%}
                  {% case filter.type %}
                    {% when 'boolean', 'list' %}
                      <details
                        id="Details-{{ forloop.index }}-{{ section.id }}"
                        class="{% if filter_type == 'horizontal' %}horizontal-filter-element disclosure-has-popup facets__disclosure{% else %} facets__disclosure-vertical{% endif %} js-filter"
                        data-index="{{ forloop.index }}"
                        {% if forloop.index == 1 %}
                          open
                        {% endif %}
                      >
                        <summary
                          class="facets__summary caption-large focus-offset"
                          aria-label="{{ filter.label }} ({{ 'products.facets.filters_selected.one' | t: count: filter.active_values.size }})"
                        >
                          <div>
                            <span class="filter-group__heading h2">
                              {{- filter.label | escape }}
                              {%- if filter_type == 'vertical' -%}
                                <span class="facets__selected no-js-hidden{% if filter.active_values.size == 0 %} hidden{% endif %}">
                                  ({{ filter.active_values.size }})</span
                                >
                              {%- endif -%}
                            </span>
                          </div>
                        </summary>
                        <div
                          id="Facet-{{ forloop.index }}-{{ section.id }}"
                          class="page-width parent-display {% if filter_type == 'horizontal' %}facets__display{% else %}facets__display-vertical{% endif %}"
                        >
                          <div class="page-width">
                            {%- if filter_type != 'vertical' -%}
                              <div class="facets__header">
                                <span class="facets__selected no-js-hidden">
                                  {{- 'products.facets.filters_selected' | t: count: filter.active_values.size -}}
                                </span>
                                <facet-remove>
                                  <a href="{{ filter.url_to_remove }}" class="facets__reset link underlined-link">
                                    {{ 'products.facets.reset' | t }}
                                  </a>
                                </facet-remove>
                              </div>
                            {%- endif -%}
                            <fieldset class="facets-wrap parent-wrap {% if filter_type == 'vertical' %} facets-wrap-vertical{% endif %}">
                              <legend class="visually-hidden">{{ filter.label | escape }}</legend>
                              {%- assign filter_label = filter.label | handleize -%}
                              {% case filter_label %}
                                {% when 'product-type' %}
                                  <div class="product-type-filter__heading">Select products to refine your search</div>
                                  <ul
                                    class="product-type-filter {% if filter_type != 'vertical' %} facets__list{% endif %} list-unstyled no-js-hidden"
                                    role="list"
                                  >
                                    {%- for value in filter.values -%}
                                      {% for block in section.blocks %}
                                        {% if block.type == 'product-type' %}
                                          {% for i in (1..5) %}
                                            {%- assign customizer_label_id = 'text_' | append: i | escape -%}
                                            {%- assign customizer_label = block.settings[customizer_label_id] | handleize -%}
                                            {%- assign customizer_value = 'image_' | append: i -%}
                                            {%- assign backend_value = value.label | handleize -%}

                                            {%- if backend_value == customizer_label -%}
                                              <li class="list-menu__item facets__item{% if forloop.index > 10 and filter_type == 'vertical' %} show-more-item hidden{% endif %}">
                                                <input
                                                  type="checkbox"
                                                  name="{{ value.param_name }}"
                                                  value="{{ value.value }}"
                                                  id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}-{{- value.value -}}"
                                                  {% if value.active %}
                                                    checked
                                                  {% endif %}
                                                  {% if value.count == 0 and value.active == false %}
                                                    disabled
                                                  {% endif %}
                                                >
                                                <label
                                                  for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}-{{- value.value -}}"
                                                  class="facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                                >
                                                  
                                                  <div class="filter-category-image">
                                                    <img srcset="{{ block.settings[customizer_value] | image_url: width: block.settings.image_width }}, {{ block.settings[customizer_value] | image_url: width: image_size_2x }} 2x"
                                                      src="{{ block.settings[customizer_value] | image_url: width: 760 }}"
                                                      alt="{{ block.settings[customizer_value].alt | escape }}"
                                                      loading="lazy"
                                                      width="{{ block.settings[customizer_value].width }}"
                                                      height="{{ block.settings[customizer_value].height }}">
                                                  </div>
                                                  <span aria-hidden="true">{{ value.label | escape }} </span>
                                                  <span class="visually-hidden">
                                                    {{- value.label | escape }} (
                                                    {%- if value.count == 1 -%}
                                                      {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                                    {%- else -%}
                                                      {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                                    {%- endif -%}
                                                    )</span
                                                  >
                                                </label>
                                              </li>
                                            {%- endif -%}
                                          {%- endfor -%}
                                        {%- endif -%}
                                      {%- endfor -%}
                                    {%- endfor -%}
                                  </ul>
                                {% when 'available-size' %}
                                  <div class="available-size__subtext txt-ctr subtitle-text">Select size to refine your search</div>
                                  <div class="available-size__heading txt-ctr h2">Available Size</div>
                                  <ul
                                    class="size-type-filter {% if filter_type != 'vertical' %} facets__list{% endif %} list-unstyled no-js-hidden"
                                    role="list"
                                  >
                                    {%- for value in filter.values -%}
                                      <li class="list-menu__item facets__item{% if forloop.index > 10 and filter_type == 'vertical' %} show-more-item hidden{% endif %}">
                                        <input
                                          type="checkbox"
                                          name="{{ value.param_name }}"
                                          value="{{ value.value }}"
                                          id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                          {% if value.active %}
                                            checked
                                          {% endif %}
                                          {% if value.count == 0 and value.active == false %}
                                            disabled
                                          {% endif %}
                                        >
                                        <label
                                          for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                          class="facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                        >
                                          
                                          <span class="subtitle-text" aria-hidden="true">{{ value.label | escape }} </span>
                                          <span class="visually-hidden">
                                            {{- value.label | escape }} (
                                            {%- if value.count == 1 -%}
                                              {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                            {%- else -%}
                                              {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                            {%- endif -%}
                                            )</span
                                          >
                                        </label>
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                {% when 'temperature-rating' %}
                                  <div class="temperature-text__wraper flex-space-center">
                                    <div class="temperature-text__heading h3">
                                      Thermal Experience Index â„¢
                                    </div>
                                    <div class="temperature-text__desc subtitle-text">
                                      Whether you're working up a sweat hiking trails, embarking on an urban adventure, or exploring the coldest places on Earth, we've developed the Thermal Experience Index (TEI) to help you find the right Canada Goose product for your body, your activities, and lifestyle.
                                    </div>
                                  </div>
                                  <div class="temperature-text__sub-heading subtitle-text">
                                    Select your interests to refine your search
                                  </div>
                                  <ul
                                    class="temperature-rating-filter product-type-filter{% if filter_type != 'vertical' %} facets__list{% endif %} list-unstyled no-js-hidden"
                                    role="list"
                                  >
                                    {%- for value in filter.values -%}
                                      {% for block in section.blocks %}
                                        {% if block.type == 'temperature-rating' %}
                                          {% for i in (1..5) %}
                                            {%- assign customizer_label_id = 'text_' | append: i | escape -%}
                                            {%- assign customizer_label = block.settings[customizer_label_id] | handleize -%}
                                            {%- assign customizer_value = 'image_' | append: i -%}
                                            {%- assign customizer_text_value = 'image_text_' | append: i -%}
                                            {%- assign backend_value = value.label | handleize -%}

                                            {%- if backend_value == customizer_label -%}
                                              <li class="list-menu__item facets__item{% if forloop.index > 10 and filter_type == 'vertical' %} show-more-item hidden{% endif %}">
                                                <input
                                                  type="checkbox"
                                                  name="{{ value.param_name }}"
                                                  value="{{ value.value }}"
                                                  id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                                  {% if value.active %}
                                                    checked 
                                                  {% endif %}
                                                  {% if value.count == 0 and value.active == false %}
                                                    disabled
                                                  {% endif %}
                                                >
                                                <label
                                                  for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                                  class="facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                                >
                                                  
                                                  <div class="filter-category-image">
                                                    <img srcset="{{ block.settings[customizer_value] | image_url: width: block.settings.image_width }}, {{ block.settings[customizer_value] | image_url: width: image_size_2x }} 2x"
                                                      src="{{ block.settings[customizer_value] | image_url: width: 760 }}"
                                                      alt="{{ block.settings[customizer_value].alt | escape }}"
                                                      loading="lazy"
                                                      width="{{ block.settings[customizer_value].width }}"
                                                      height="{{ block.settings[customizer_value].height }}">
                                                    <div class="temp-text__wrapper">
                                                      <div class="temp-top__text subtitle-text">{{ block.settings[customizer_text_value] | split: '|' | first | escape }}</div>
                                                      <div class="temp-bottom__text subtitle-text">{{ block.settings[customizer_text_value] | split: '|' | last | escape }}</div>
                                                    </div>
                                                  </div>
                                                  <span aria-hidden="true">{{ value.label | escape }} </span>
                                                  <span class="visually-hidden">
                                                    {{- value.label | escape }} (
                                                    {%- if value.count == 1 -%}
                                                      {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                                    {%- else -%}
                                                      {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                                    {%- endif -%}
                                                    )</span
                                                  >
                                                </label>
                                              </li>
                                            {%- endif -%}
                                          {%- endfor -%}
                                        {%- endif -%}
                                      {%- endfor -%}
                                    {%- endfor -%}
                                  </ul>
                                {% when 'fit' %}
                                  <div class="fit-type-filter__heading">Select your interests to refine your search</div>
                                  <ul
                                    class="fit-type-filter flex-center-center{% if filter_type != 'vertical' %} facets__list{% endif %} list-unstyled no-js-hidden"
                                    role="list"
                                  >
                                    {%- for value in filter.values -%}
                                      {% assign currentValue = value.label | handleize %}
                                      {% for block in section.blocks %}
                                        {% if block.type == 'fit' %}
                                          {% if currentValue == 'classic' %}
                                            <li class="list-menu__item facets__item{% if forloop.index > 10 and filter_type == 'vertical' %} show-more-item hidden{% endif %}">
                                              <div class="fit-left__container">
                                                <div class="fit-text__container">
                                                  <div class="fit-text__heading">
                                                    {{ block.settings.heading_1 }}
                                                  </div>
                                                  <div class="fit-text__desc">
                                                    {{ block.settings.textarea_1 }}
                                                  </div>
                                                </div>
                                                <input
                                                  type="checkbox"
                                                  name="{{ value.param_name }}"
                                                  value="{{ value.value }}"
                                                  id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}--classic"
                                                  {% if value.active %}
                                                    checked
                                                  {% endif %}
                                                  {% if value.count == 0 and value.active == false %}
                                                    disabled
                                                  {% endif %}
                                                >
                                                <label
                                                  for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}--classic"
                                                  class="facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                                >
                                                  <div class="filter-fit-image">
                                                    <img srcset="{{ block.settings.image_1 | image_url: width: block.settings.image_width }}, {{ block.settings.image_1 | image_url: width: image_size_2x }} 2x"
                                                      src="{{ block.settings.image_1 | image_url: width: 760 }}"
                                                      alt="{{ block.settings.image_1.alt | escape }}"
                                                      loading="lazy"
                                                      width="{{ block.settings.image_1.width }}"
                                                      height="{{ block.settings.image_1.height }}">
                                                  </div>
                                                  <span aria-hidden="true"></span>
                                                  <span class="visually-hidden">
                                                    {{- value.label | escape }} (
                                                    {%- if value.count == 1 -%}
                                                      {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                                    {%- else -%}
                                                      {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                                    {%- endif -%}
                                                    )</span
                                                  >
                                                </label>
                                              </div>
                                            </li>
                                          {% elsif currentValue == 'fusion' %}
                                            <li class="list-menu__item facets__item{% if forloop.index > 10 and filter_type == 'vertical' %} show-more-item hidden{% endif %}">
                                            <div class="fit-right__container">
                                              <div class="fit-text__container">
                                                <div class="fit-text__heading">
                                                  {{ block.settings.heading_2 }}
                                                </div>
                                                <div class="fit-text__desc">
                                                  {{ block.settings.textarea_2 }}
                                                </div>
                                              </div>
                                              <input
                                                type="checkbox"
                                                name="{{ value.param_name }}"
                                                value="{{ value.value }}"
                                                id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}--fusion"
                                                {% if value.active %}
                                                  checked
                                                {% endif %}
                                                {% if value.count == 0 and value.active == false %}
                                                  disabled
                                                {% endif %}
                                              >
                                              <label
                                                for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}--fusion"
                                                class="facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                              >
                                                <div class="filter-fit-image">
                                                  <img srcset="{{ block.settings.image_2 | image_url: width: block.settings.image_width }}, {{ block.settings.image_2 | image_url: width: image_size_2x }} 2x"
                                                    src="{{ block.settings.image_2 | image_url: width: 760 }}"
                                                    alt="{{ block.settings.image_2.alt | escape }}"
                                                    loading="lazy"
                                                    width="{{ block.settings.image_2.width }}"
                                                    height="{{ block.settings.image_2.height }}">
                                                </div>
                                                <span aria-hidden="true"></span>
                                                <span class="visually-hidden">
                                                  {{- value.label | escape }} (
                                                  {%- if value.count == 1 -%}
                                                    {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                                  {%- else -%}
                                                    {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                                  {%- endif -%}
                                                  )</span
                                                >
                                              </label>
                                            </div>
                                            </li>
                                          {% endif %}
                                        {% endif %}
                                      {% endfor %}
                                    {%- endfor -%}
                                  </ul>

                                {% when 'colour' %}
                                  <div class="color-type-filter__heading">Select colour to refine your search</div>
                                  <ul
                                    class="color-type-filter {% if filter_type != 'vertical' %} facets__list{% endif %} list-unstyled no-js-hidden"
                                    role="list"
                                  >
                                    {%- for value in filter.values -%}
                                      <li class="list-menu__item facets__item{% if forloop.index > 10 and filter_type == 'vertical' %} show-more-item hidden{% endif %}">
                                        <input
                                          type="checkbox"
                                          name="{{ value.param_name }}"
                                          value="{{ value.value }}"
                                          id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                          {% if value.active %}
                                            checked
                                          {% endif %}
                                          {% if value.count == 0 and value.active == false %}
                                            disabled
                                          {% endif %}
                                        >
                                        <label
                                          for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                          class="facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                        >
                                          <span class="collection-color-filter {{ value.label | handleize }}" aria-hidden="true"></span>
                                          <span aria-hidden="true"></span>
                                          <span class="visually-hidden">
                                            {{- value.label | escape }} (
                                            {%- if value.count == 1 -%}
                                              {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                            {%- else -%}
                                              {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                            {%- endif -%}
                                            )</span
                                          >
                                        </label>
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                {% when 'more-filters' %}
                                  <div class="more-filters-contianer__heading">Select options to refine your search</div>
                                  <div class="more-filters__contianer">
                                    <ul class="{% if filter_type != 'vertical' %} facets__list{% endif %} list-unstyled no-js-hidden"
                                      role="list"
                                    > 
                                      <div class="sub-filter__heading subtitle-text">Length</div>
                                      {% for value in filter.values %}

                                        {% assign currentValue = value.label | split: '--' | first | handleize %}
                                          {% if currentValue == 'length' %}
                                          <li class="list-menu__item facets__item{% if forloop.index > 10 and filter_type == 'vertical' %} show-more-item hidden{% endif %}">
                                            <input
                                              type="checkbox"
                                              name="{{ value.param_name }}"
                                              value="{{ value.value }}"
                                              id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                              {% if value.active %}
                                                checked
                                              {% endif %}
                                              {% if value.count == 0 and value.active == false %}
                                                disabled
                                              {% endif %}
                                            >
                                            <label
                                              for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                              class="facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                            >
                                              <span class="more-box-filter" aria-hidden="true">{{ value.label | split: '--' | last | escape | capitalize }} </span>
