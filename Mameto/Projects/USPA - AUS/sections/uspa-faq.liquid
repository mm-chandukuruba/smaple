{% if page.title == "faq" %}
  <div class="faq-container page-width faq-section-padding">
    <div class="title h1 center">{{ section.settings.heading_text }}</div>
    <div class="faq-wrapper flex product-details page-width">
      {% for block in section.blocks %}
          <accordion-tab class="accordion">
              <details>
                <summary>
                  <span class="summary__title">
                    <p class="accordion__title h3">{{ block.settings.question }}</p>
                  </span>
                  <span class="icon icon-plus-alt pluse-symbol"></span>
                </summary>
                <div class="accordion__content rte typeset">
                  <p>{{ block.settings.answer }}</p>
                </div>
              </details>
            </accordion-tab>
      {% endfor %}
    </div>
  </div>
{% endif %}
{% style %}
  .faq-section-padding{
     padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

.faq-container .accordion summary .pluse-symbol{
  position: absolute;
    top: 50%;
    color: black;
    transition: transform var(--duration-default) ease;
    right: 1.2rem;
    margin-top: -1rem;
    width: 2rem;
    height: 2rem;
}
.faq-container .accordion details:not([open]) summary:hover .pluse-symbol {
    transform: rotate(90deg);
}
.faq-container details{
  padding: 10px 0;
}
 .pluse-symbol:before {
    width: 100%;
    height: 0.1rem;
}
.faq-container .accordion summary .pluse-symbol:after{
        transition: height var(--duration-default) ease;
  }
  .pluse-symbol:after {
    width: 0.1rem;
    height: 100%;
}
  .pluse-symbol:before, .pluse-symbol:after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: currentColor;
}
{% endstyle %}
{% schema %}
{
  "name": "FAQs",
  "settings": [
     {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "Padding top",
    "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    },
    {
      "type":"text",
      "id":"heading_text",
      "label":"Heading"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Enter question"
        },
        {
          "type": "text",
          "id": "answer",
          "label": "Enter answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Faq"
    }
  ]
}
{% endschema %}