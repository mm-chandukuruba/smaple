{{ "multi-images-grid-layout.css" | asset_url | stylesheet_tag }}
<style>
  .section--{{ section.id }} {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
  }
</style>

<div class="multi-collection-layout__container page-width section--{{ section.id }}">
    <div class="brand-information">
      <h1 class="subtitle-text tm-blue-color">{{ section.settings.title | remove: '<p>' | remove: '</p>' }}</h1>
      <p class="text-body">{{ section.settings.description | remove: '<p>' | remove: '</p>' }}</p>
      <div>
          <a href="{{ section.settings.link }}">Learn More</a>
      </div>
    </div>
    <div class="multi-collection-layout">
        <div class="collection-layout-grid">
            <div class="collection-layout-grid-item">
              {% render "picture", class: "placeholder_image", mobileSrc: section.settings.banner_image, desktopSrc: section.settings.banner_image %}
            </div>
            <div class="collection-layout-grid-item nested-grid">
                <div class="nested-grid-item nested-child-grid">
                    <div class="nested-child-grid-item nested-child">
                        <div class="nested-child-item">
                          {% render "picture", mobileSrc: section.settings.landscape_image1, desktopSrc: section.settings.landscape_image1 %}
                        </div>
                        <div class="nested-child-item">
                          {% render "picture", mobileSrc: section.settings.landscape_image2, desktopSrc: section.settings.landscape_image2 %}
                        </div>
                    </div>
                    <div class="nested-child-grid-item">
                      {% render "picture", mobileSrc: section.settings.adaptive_image, desktopSrc: section.settings.adaptive_image %}
                    </div>
                </div>
                <div class="nested-grid-item">
                  {% render "picture", mobileSrc: section.settings.square_image, desktopSrc: section.settings.square_image %}
                </div>
            </div>
        </div>
    </div>
</div>


{% schema %}
  {
    "name": "Multi images layout",
    "settings": [
      {
        "type": "header",
        "content": "Section padding "
      },
      {
        "type": "range",
        "id": "padding-top",
        "label": "Top padding",
        "min": 0,
        "max": 150,
        "step": 5,
        "unit": "px",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding-bottom",
        "label": "Bottom padding",
        "min": 0,
        "max": 150,
        "step": 5,
        "unit": "px",
        "default": 40
      },
      {
        "type": "header",
        "content": "Brand information"
      },
      {
        "type": "richtext",
        "id": "title",
        "label": "Enter brand title"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Enter brand description",
        "default": "<p>Description</p>"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Enter url"
      },
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Select landscape image"
      },
      {
        "type": "image_picker",
        "id": "landscape_image1",
        "label": "Select landscape image"       
      },
      {
        "type": "image_picker",
        "id": "landscape_image2",
        "label": "Select banner image"       
      },
      {
        "type": "image_picker",
        "id": "adaptive_image",
        "label": "Select adaptive image"
      },
      {
        "type": "image_picker",
        "id": "square_image",
        "label": "Select square image"
      }
    ],
    "presets": [
      {
        "name": "Multi images layout"
      }
    ]
  }
{% endschema %}

